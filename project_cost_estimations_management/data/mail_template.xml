<odoo>
    <record id="email_template_cost_estimate_state" model="mail.template">
        <field name="name">Cost Estimate State Notification</field>
        <field name="model_id" ref="project_cost_estimations_management.model_project_cost_estimate"/>
        <field name="subject">Cost Estimate Update</field>
        <field name="email_from"><![CDATA[<t t-esc="user.email or 'noreply@example.com'"/>]]></field>
        <field name="email_to"><![CDATA[<t t-esc="object.create_uid.email or ''"/>]]></field>
        <field name="body_html"><![CDATA[
            <div style="font-family: Arial, sans-serif; color: #333;">
                <div style="background-color: #f5f5f5; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                    <h2 style="color: #2a5d9f; margin: 0;">Hello <t t-esc="object.create_uid.name or 'User'"/>!</h2>
                    <p style="margin-top: 10px; font-size: 14px;">
                        Your cost estimate <strong><t t-esc="object.name or 'N/A'"/></strong> has been
                        <strong><t t-esc="object.state or 'N/A'"/></strong>.
                    </p>
                </div>

                <div style="padding: 15px; border: 1px solid #e0e0e0; border-radius: 8px;">
                    <h3 style="margin-top: 0; color: #2a5d9f;">Estimate Details</h3>
                    <table style="width: 100%; border-collapse: collapse; font-size: 14px;">
                        <tr>
                            <td style="padding: 8px; font-weight: bold; width: 40%;">Estimated Total Cost:</td>
                            <td style="padding: 8px;">$<t t-esc="object.estimated_total_cost or 0.00"/></td>
                        </tr>
                        <tr t-if="object.project_id">
                            <td style="padding: 8px; font-weight: bold;">Project:</td>
                            <td style="padding: 8px;"><t t-esc="object.project_id.name or ''"/></td>
                        </tr>
                    </table>
                </div>

                <p style="margin-top: 20px; font-size: 13px; color: #666;">
                    If you have any questions regarding this estimate, please contact <t t-esc="user.name or 'the administrator'"/>.
                </p>

                <p style="font-size: 12px; color: #999; margin-top: 30px;">
                    This is an automated notification from your Odoo system. Please do not reply directly to this email.
                </p>
            </div>
        ]]></field>
    </record>
</odoo>
